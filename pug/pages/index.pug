extends ../main

block variables
    - var title = 'Главная'
    - var banner = {enable: true, bread: false};
    - var feed = false;

block content
    main.index
        //- tariffs
        section.index__slider
            .islider
                .container
                    .islider__top
                        h2.islider__title
                            | Популярные тарифы&nbsp;
                            span.islider__title_y Интернет
                        .islider__sub
                            | Подборную информацию об акциях смотрите в разделе&nbsp;
                            a(href='/') Акции
                    .islider__bottom
                        .row.islider__row
                            .islider__left
                                +tariffAction('Тарифные планы с промо-периодом <b>до 3 месяцев*</b>','background-color: #112643')
                            .islider__right
                                div(data-id=1).islider__slider.swiper-container
                                    .swiper-wrapper
                                        each i in tariffList
                                            .swiper-slide.islider__slide
                                                +tariff(i)
                                a(href='#' data-id=1).islider__arr.islider__prev
                                    <svg width="15" height="21" viewBox="0 0 15 21" fill="none" xmlns="http://www.w3.org/2000/svg">
